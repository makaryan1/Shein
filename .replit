modules = ["web", "python-3.11", "nodejs-20"]
run = "python app.py"

[nix]
channel = "stable-24_05"

[unitTest]
language = "python3"

[gitHubImport]
requiredFiles = [".replit", "replit.nix"]

[deployment]
run = ["sh", "-c", "gunicorn main:app --host 0.0.0.0 --port $PORT --workers 2 --timeout 120"]
deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000

[[ports]]
localPort = 5000
externalPort = 5000

[workflows]
runButton = "Run Flask App"

[[workflows.workflow]]
name = "Run Flask App"
author = 43288229
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 main.py"

[[workflows.workflow]]
name = "Run with Gunicorn"
author = 41204472
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn main:app --host 0.0.0.0 --port 5000 --workers 1 --reload"

[[workflows.workflow]]
name = "Production Server"
author = 41204472
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn main:app --host 0.0.0.0 --port 5000 --workers 2 --timeout 120 --keep-alive 2 --max-requests 1000"
